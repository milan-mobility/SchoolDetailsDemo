<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_light">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/schoolImage"
                android:layout_width="@dimen/dimens_50dp"
                android:layout_height="@dimen/dimens_50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_launcher_background"
                app:shapeAppearance="@style/imageShape"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimens_10dp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSchoolName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/schoolImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/dashara_shakshanik_sankul"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:textColor="@color/blue"
                app:layout_constraintTop_toTopOf="@id/schoolImage" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtSchoolEmail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/schoolImage"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/khushbu_gmail_com"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:layout_marginStart="@dimen/dimens_10dp"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@id/txtSchoolName"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>